<!DOCTYPE html>
<html lang="en">

<%- include('../../partials/user/header') %>
    <body>


        <%- include('../../partials/user/navbar') %>


            <div class="container">
                <div class="row d-flex  justify-content-center">

                    <% notification.forEach(function(element){ %>
                        <div class="col-12 mt-5">
                            <div class="card">
                                <div class="card-header" style="background: #b3d7ff;"><%= element.header %> </div>
                                <div class="card-body" style="background: lavender;">
                                    
                                    <pre class="card-text"><%= element.body %> </pre>
                                </div>
                                <div class="card-footer" style="background: #b3d7ff;">
                                    <p class="text-black" style="color: #fff;">
                                        
                                        <%= element.footer %> <span class="float-right"><strong>Uploaded Date: <%= element.date %></strong></span>
                                    </p>
                                    
                                </div>
                            </div>
                        </div>
                        <% }); %>

                </div>
            </div>

            <%- include('../../partials/user/footer') %>

    </body>

</html>