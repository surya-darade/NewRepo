<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../../partials/admin/header') %>
        <title>Update Study Material</title>
    </head>
<body class="">
    <%- include('../../partials/admin/navbar') %>

    <div class="container ">
        <div class="row justify-content-center">
            <div class="col-12 mt-1">
                <h1 class="text-center">Update Study Material</h1>
            </div>
           
            <div class="col-md-6 mt-2">
                <div class="">
                    <form action="/updateStudyMaterial/<%=results._id%>" method="post" class="" enctype="multipart/form-data">
                        <div>
                            <% if(alerts.error){ %> 
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <%= alerts.error %>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                      <span aria-hidden="true">&times;</span>
                                    </button>
                                  </div>
                            <% } %>
                            <% if(alerts.success){ %> 
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <%= alerts.success %>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                      <span aria-hidden="true">&times;</span>
                                    </button>
                                  </div>
                            <% } %> 
                        </div>
                        <div class="form-group">
                            <input type="text" name="name" class="form-control" value="<%=results.name %>" placeholder="Header" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="desc" class="form-control" value="<%=results.desc %>" placeholder="Footer" required>
                        </div>
                        <div class="form-group">
                            <textarea name="code" class="form-control" rows="3" required><%=results.code %></textarea>
                        </div>
                        <div class="form-group">
                            <input type="text" name="video_link" class="form-control" value="<%=results.video_link %>" placeholder="Video Link" required>
                        </div>
                        <div class="form-group">
                            <label for="">Upload Video</label>
                            <input type="file" name="file" class="form-control" id="">
                        </div>
                        <div class="form-group">
                            <input type="date" name="date" value="<%=results.date %>" id="" class="form-control" required>
                        </div>
                        <label for="">Status</label>
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="status" id="exampleRadios1" value="Show" <% if(results.status == "Show"){  %> checked <% } %>>
                                <label class="form-check-label" for="exampleRadios1">
                                  Show
                                </label>
                              </div>
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="status" id="exampleRadios1" value="Hide" <% if(results.status == "Hide"){  %> checked <% } %> >
                                <label class="form-check-label" for="exampleRadios1">
                                  Hide
                                </label>
                              </div>
                        </div>
                       <div class="text-center">
                        <button type="submit" class="btn btn-primary w-50">Submit</button>
                       </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include('../../partials/admin/footer') %>
</body>

</html>