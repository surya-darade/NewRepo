<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../../partials/admin/header') %>
        <title>Update User</title>
    </head>
<body class="">
    <%- include('../../partials/admin/navbar') %>


    <section class="">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <h1 class="text-center">Update User</h1>
                    <form action="/admin/updateUser/<%=results._id%>" method="post" autocomplete="off">
                        <div class="form-group">
                            <label for="">Full name:</label>
                            <input type="text" name="name" class="form-control"  value="<%=results.name %>">
                            <div class="text-danger" style="margin-bottom: 0.8rem;">
                                <%=results.nameError%>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Email Id</label>
                            <input type="text" name="email" class="form-control" value="<%=results.email%>">
                            <div class="text-danger" style="margin-bottom: 0.8rem;">
                                <%=results.emailError%>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Mobile no</label>
                            <input type="text" name="mobile" class="form-control" value="<%=results.mobile%>">
                            <div class="text-danger" style="margin-bottom: 0.8rem;">
                                <%=results.mobileError%>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" name="username" class="form-control" value="<%=results.username%>" required="">
                            <div class="text-danger" style="margin-bottom: 0.8rem;">
                                <%=results.usernameError%>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" name="password" class="form-control" required="">
                            <div class="text-danger" style="margin-bottom: 0.8rem;">
                                <%=results.passwordError%>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary w-50">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

   
    <%- include('../../partials/admin/footer') %>
</body>

</html>