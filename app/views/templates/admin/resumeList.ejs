<!DOCTYPE html>
<html lang="en">

    <head>
        <%- include('../../partials/admin/header') %>
        <title>Resume List</title>
    </head>
<body>

    <%- include('../../partials/admin/navbar') %>


    <section class="">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="text-center mt-3"> Resume List</h1>
                    <div class="">
                        <% if(alerts.error){ %> 
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <%= alerts.error %>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                        <% } %>
                        <% if(alerts.success){ %> 
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <%= alerts.success %>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                        <% } %> 
                    </div>
                   <div class="table-responsive table-wrapper-scroll-y my-custom-scrollbar">
                    <table class="table table-striped bg-light mt-3">
                        <thead>
                            <th>Name</th>
                            <th>Username</th>
                            <th>Date</th>
                            <th>Resume</th>
                            <!-- <th class="text-center">Operations</th> -->
                        </thead>
                        <tbody>
                            <% resumes.forEach(function(element){ %>
                                <tr>
                                    <td><%= element.name %></td>
                                    <td><%= element.username %></td>
                                    <td><%= element.date %></td>
                                    <td><a href="<%= element.fileName %>" target="resume" >Resume</a></td>
                                    <!-- <td class="text-center">
                                    <a href="/admin/updateNotification/<%= element._id %>"><i class="fa fa-pencil" aria-hidden="true"></i></a> &nbsp;&nbsp;&nbsp; 
                                    <a href="/admin/deleteNotification/<%= element._id %>" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                    </td> -->
                                </tr>
                            
                                <%  }); %>
                         
                                
                
                        </tbody>
                    </table>

                   </div>
                </div>
                <div class="col-12 mt-3">
                    <div>
                        <iframe src="" height="700px" width="100%" name="resume" style="border:none;" title="Iframe Example"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>  

    <%- include('../../partials/admin/footer') %>
</body>

</html>