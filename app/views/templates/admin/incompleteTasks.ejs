<!DOCTYPE html>
<html lang="en">

    <head>
        <%- include('../../partials/admin/header') %>
        <title>Incomplete Tasks</title>
    </head>
<body>

    <%- include('../../partials/admin/navbar') %>


    <section class="">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="text-center mt-3">Incomplete Tasks </h1>
                    <div class="">
                        <% if(alerts.error){ %> 
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <%= alerts.error %>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                        <% } %>
                        <% if(alerts.success){ %> 
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <%= alerts.success %>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                        <% } %> 
                    </div>
                   <div class="table-responsive table-wrapper-scroll-y my-custom-scrollbar">
                    <table class="table table-striped bg-light mt-3">
                        <thead>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Task</th>
                            <th>Username</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Uploaded Date</th>
                            <th>Attachment</th>
                            <th>Status</th>
                            <th class="text-center">Operations</th>
                        </thead>
                        <tbody>
                            <% tasks.forEach(function(element){ %>
                                <tr>
                                    <td><%= element.title %></td>
                                    <td><%= element.desc %></td>
                                    <td><%= element.body %></td>
                                    <td><%= element.username %></td>
                                    <td><%= element.start_time %></td>
                                    <td><%= element.end_time %></td>
                                    <td><%= element.date %></td>
                                    <td><a href="<%= element.file_name %>" target="task">Attachment</a></td>
                                    <td><%= element.status %></td>
                                    <td class="text-center">
                                    <a href="/admin/updateTask/<%= element._id %>"><i class="fa fa-pencil" aria-hidden="true"></i></a> &nbsp;&nbsp;&nbsp;
                                    <a href="/admin/deleteIncompleteTask/<%= element._id %>" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                            
                                <%  }); %>                                         
                
                        </tbody>
                    </table>
                   </div>
                </div>
                <div class="col-12 mt-3">
                    <div>
                        <iframe src="" height="700px" width="100%" name="task" style="border:none;" title="Iframe Task"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <%- include('../../partials/admin/footer') %>

</body>

</html>