<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../../partials/admin/header') %>
        <title>User list</title>
    </head>
<body>

    <%- include('../../partials/admin/navbar') %>


    <section class="">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="mt-3">
                        <% if(alerts.error){ %> 
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <%= alerts.error %>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                        <% } %>
                        <% if(alerts.success){ %> 
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <%= alerts.success %>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                        <% } %> 
                    </div>
                   <div class="table-responsive table-wrapper-scroll-y my-custom-scrollbar border">
                    <table class="table table-striped bg-light mt-3">
                        <thead>
                            <th>Name</th>
                            <th>Email Id</th>
                            <th>Mobile No</th>
                            <th>Username</th>
                            <th>Password</th>
                            <th>Operations</th>
                        </thead>
                        <tbody>
                            <% users.forEach(function(element){ %>
                                <tr>
                                    <td><%= element.name %></td>
                                    <td><%= element.email %></td>
                                    <td><%= element.mobile %></td>
                                    <td><%= element.username %></td>
                                    <td><%= element.password %></td>
                                    <td>
                                    <a href="/admin/update/<%= element._id %>"><i class="fa fa-pencil" aria-hidden="true"></i></a> &nbsp;&nbsp;&nbsp;
                                    <a href="/admin/delete/<%= element._id %>" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fa fa-trash" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                            
                                <%  }); %>
                         
                                
                
                        </tbody>
                    </table>
                   </div>
                </div>
            </div>
        </div>
    </section>
    

    <%- include('../../partials/admin/footer') %>

</body>

</html>